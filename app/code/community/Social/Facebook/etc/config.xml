<config>
    <modules>
        <Social_Facebook>
            <version>1.6.0.1</version>
        </Social_Facebook>
    </modules>
    <global>
        <models>
            <social_facebook>
                <class>Social_Facebook_Model</class>
                <resourceModel>social_facebook_resource</resourceModel>
            </social_facebook>
            <social_facebook_resource>
                <class>Social_Facebook_Model_Resource</class>
                <entities>
                    <facebook>
                        <table>social_facebook_actions</table>
                    </facebook>
                </entities>
            </social_facebook_resource>
        </models>
        <resources />
        <blocks>
            <social_facebook>
                <class>Social_Facebook_Block</class>
            </social_facebook>
        </blocks>
        <helpers>
            <social_facebook>
                <class>Social_Facebook_Helper</class>
            </social_facebook>
        </helpers>
    </global>
    <admin>
        <routers>
             <adminhtml>
                 <args>
                     <modules>
                         <social_facebook before="Mage_Adminhtml">Social_Facebook_Adminhtml</social_facebook>
                     </modules>
                 </args>
             </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <social_facebook>
                    <file>facebook.xml</file>
                </social_facebook>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <social_facebook>
                    <file>facebook.xml</file>
                </social_facebook>
            </updates>
        </layout>
        <translate>
            <modules>
                <Social_Facebook>
                    <files>
                        <default>Social_Facebook.csv</default>
                    </files>
                </Social_Facebook>
            </modules>
        </translate>
        <routers>
            <social_facebook>
                <use>standard</use>
                <args>
                    <module>Social_Facebook</module>
                    <frontName>facebook</frontName>
                </args>
            </social_facebook>
        </routers>
        <events>
            <controller_action_predispatch_catalog_product_view>
                <observers>
                    <social_facebook_code>
                        <class>social_facebook/observer</class>
                        <method>catalogProduct</method>
                    </social_facebook_code>
                </observers>
            </controller_action_predispatch_catalog_product_view>
        </events>
    </frontend>
</config>
