?>
<?php if (!empty($actions)): ?>
    <?php foreach ($actions as $action): ?>
        <a class="facebookBtn" href="<?php echo $this->getFacebookUrl($action['action']) ?>"><?php echo $this->escapeHtml($action['title']) ?></a></button>
    <?php endforeach; ?>
    <div style="clear:both;"></div>
